<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentList">

    <TextView
        android:id="@+id/textViewCatRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="286dp"
        android:text="Your Rating: -"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonCat"
        app:layout_constraintStart_toStartOf="@+id/imageButtonCat"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonCat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCatRating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButtonDog"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle3"
        app:srcCompat="@drawable/cat" />

    <TextView
        android:id="@+id/textViewTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Rate Your Favorite Animal"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonDog"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="37dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonCat"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonCat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageButtonCat"
        app:srcCompat="@drawable/dog" />

    <TextView
        android:id="@+id/textViewDogRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="11dp"
        android:text="Your Rating: -"
        app:layout_constraintStart_toStartOf="@+id/imageButtonDog"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonDog" />

    <TextView
        android:id="@+id/textViewTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="9dp"
        android:text="Press on the image below to rate your favorite animal."
        app:layout_constraintStart_toStartOf="@+id/imageButtonDog"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle2" />

    <ImageButton
        android:id="@+id/imageButtonRabbit"
        android:layout_width="0dp"
        android:layout_height="173dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="230dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButtonBear"
        app:layout_constraintTop_toTopOf="@+id/imageButtonCat"
        app:srcCompat="@drawable/rabbit" />

    <TextView
        android:id="@+id/textViewBearRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="12dp"
        android:text="Your Rating: -"
        app:layout_constraintStart_toStartOf="@+id/imageButtonBear"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonBear" />

    <TextView
        android:id="@+id/textViewRabbitRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Your Rating: -"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonRabbit"
        app:layout_constraintStart_toStartOf="@+id/imageButtonRabbit"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonRabbit" />

    <ImageButton
        android:id="@+id/imageButtonBear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="37dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonRabbit"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonRabbit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageButtonRabbit"
        app:srcCompat="@drawable/bear" />
</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
